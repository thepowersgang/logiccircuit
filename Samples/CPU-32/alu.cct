#testcase 10 "ALU: MOV"
#array out 32
#testassert 1	$flags_C	0
#testassert 1	$flags_O	0
#testassert 1	$flags_Z	0
#testassert 1	$flags_C_clear	0
#testassert 1	$flags_O_clear	0
$done, $nowrite, @out, $flags_C_clear, $flags_O_clear, $flags_Z_clear \
	= CPU32_ALU 1, 0[0:2], 0x12314565[0:31], 0xFF005523[0:31],\
	$flags_C, $flags_O, $flags_Z
#testassert $done $nowrite 0
#testassert $done @out[31:0]	0xFF005523[31:0]
#testcomplete $done
#endtestcase

#testcase 10 "ALU: AND"
#array out 32

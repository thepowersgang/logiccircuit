$done, $nowrite, @out, $flags_C_clear, $flags_O_clear, $flags_Z_clear \
	= CPU32_ALU 1, 1[0:2], 0x12300565[0:31], 0x00E4C000[0:31],\
	$flags_C, $flags_O, $flags_Z
#testassert $done $nowrite 0
#testassert $done @out[31:0]	0x00200000[31:0]
